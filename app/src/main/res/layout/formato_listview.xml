<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:ignore="contentDescription"
android:orientation="horizontal"
android:layout_marginTop="10sp"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MenuListview">

<ImageView
    android:layout_width="150sp"
    android:layout_height="140sp"
    android:id="@+id/platoImagen"
    android:src="@drawable/flan"/>

<LinearLayout
    android:layout_width="250sp"
    android:layout_height="140sp"
    android:orientation="vertical"
    android:padding="10sp"
    android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPlato"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="@string/txtNombre"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescrip"
        android:textStyle="bold"
        android:textSize="15sp"
        android:text="@string/txtNombre"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtPreciop"
        android:textStyle="italic"
        android:textSize="20sp"
        android:text="@string/txtPrecio"/>

</LinearLayout>

</LinearLayout>